<div class="container">
	<div class="row">
	<div class="col-md-6"> 
			<%= simple_form_for(@unit) do |f| %>
			<%= f.input :unit %>
			<%= f.input :date_start %>
			<%= f.input :date_end %>
			<%= f.select :author_id, Author.all.map{ |l| [l.name, l.id] }  %>
			<%= f.select :user_id, User.all.map{ |l| [l.name, l.id] }  %>
			<%= f.button :submit %>
			<% end %>
		</div>
	</div>
</div>