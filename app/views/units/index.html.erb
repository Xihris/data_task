<div class="container">
	
<div class="row">
	<table>
	<div class="col-xs-12 col-sm-6 col-md-8">
<% @users.each do |user| %>
    <div class="btn-group" role="group">
    	<td>
<%= button_to [user.name, find_count(user)], user_path(user), method: :get, class: "btn btn-success btn-lg btn-zenit" %>
	</td>
<% end %>
    </div>
    </div>
 <td>
 <div class="col-xs-6 col-md-offset-4">   
<%= button_to "Добавить задачу", new_temp_task_path, method: :get, class: "btn btn-primary btn-lg" %>
</td>
</table>


</div>



	
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>Компания</th>
				<th>Дата завершения</th>
				<th>Исполнитель</th>
				<th>Инициатор</th>
				<th>Группа</th>
			</tr>
		</thead>
<tbody>
<% @units.each do |unit| %>
	<% if unit.date_end.month == Time.now.month %>
  	<% @date_result = unit.date_end.day - Time.now.day %>
 	<% else %>
  	<% @date_result = 3 %>
<% end %>
	<tr class=<%= color %>>
		<td><%= link_to unit.unit, edit_unit_path(unit) %></td>
		<td><%= l unit.date_end, format: :long %></td>
		<td><%= link_to unit.user.name, user_path(unit.user_id) if !unit.user_id.nil? %></td>
		<td><%= link_to unit.author.name, author_path(unit.author_id) %></td>
		<td><%= link_to unit.id_temp_task, units_group_path(unit.id_temp_task)  %></td>
	</tr>
<% end %>
	</tbody>
</table>
</div>